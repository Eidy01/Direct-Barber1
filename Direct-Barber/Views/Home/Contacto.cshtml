@{
    ViewData["Title"] = "Contáctanos";
}

<div class="contact-container" style="padding: 50px; background: linear-gradient(135deg, #f0f0f0, #e2e2e2);">
    <h2 class="contact-title">Ponte en Contacto</h2>
    <p class="contact-subtitle">Reserva tu cita o contáctanos para más información.</p>

    <div class="contact-info">
        <div class="text-center contact-item">
            <div class="icon-circle">
                <i class="fas fa-map-marker-alt"></i>
            </div>
            <h5>Ubicación</h5>
            <p>Servicio 100% virtual</p>
        </div>
        <div class="text-center contact-item">
            <div class="icon-circle">
                <i class="fas fa-phone-alt"></i>
            </div>
            <h5>Teléfono</h5>
            <p>(+123) 456 7890</p>
        </div>
        <div class="text-center contact-item">
            <div class="icon-circle">
                <i class="fas fa-envelope"></i>
            </div>
            <h5>Correo Electrónico</h5>
            <p>info@barberiaestilo.com</p>
        </div>
    </div>

    <div class="social-media-container">
        <h4>Síguenos en nuestras redes sociales</h4>
        <div class="social-icons">
            <a href="#" class="social-link">
                <i class="fab fa-instagram"></i> <!-- Ícono de Instagram -->
            </a>
            <a href="#" class="social-link">
                <i class="fab fa-facebook"></i> <!-- Ícono de Facebook -->
            </a>
            <a href="#" class="social-link">
                <i class="fab fa-whatsapp"></i> <!-- Ícono de WhatsApp -->
            </a>
        </div>
    </div>

    <div class="testimonials-container">
        <h4>Lo que dicen nuestros clientes</h4>
        <div class="row">
            <div class="col-md-4 text-center">
                <blockquote>"El mejor servicio de barbería a domicilio que he probado, muy profesional y atentos."</blockquote>
                <p>- Sebastian</p>
            </div>
            <div class="col-md-4 text-center">
                <blockquote>"Rapidez y calidad en el servicio. Lo recomiendo al 100%."</blockquote>
                <p>- Samuel</p>
            </div>
            <div class="col-md-4 text-center">
                <blockquote>"Excelente atención, me encantó el resultado final."</blockquote>
                <p>- Valentino</p>
            </div>
        </div>
    </div>

    <!-- Formulario de Contacto -->
    <div class="contact-form">
        <h4>Envíanos un mensaje</h4>
        <form>
            <div class="form-group">
                <label for="name">Nombre</label>
                <input type="text" class="form-control" id="name" placeholder="Tu nombre">
            </div>
            <div class="form-group">
                <label for="email">Correo Electrónico</label>
                <input type="email" class="form-control" id="email" placeholder="Tu correo electrónico">
            </div>
            <div class="form-group">
                <label for="message">Mensaje</label>
                <textarea class="form-control" id="message" rows="5" placeholder="Escribe tu mensaje aquí"></textarea>
            </div>
            <button type="submit" class="btn btn-primary btn-lg">Enviar Mensaje</button>
        </form>
    </div>
</div>
